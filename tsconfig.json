{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "src/shims-vue.d.ts"
  ],
}